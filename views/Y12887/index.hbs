        }

        .nav-links {
            display: flex;
            justify-content: center; /* Centrar los elementos de navegación */
            align-items: center;
            list-style: none;
            padding: 0;
        }

        .nav-links li {
            margin: 0 10px;
        }
    
        h1, h2 {
            margin: 20px 0;
        }
    
        section {
            margin: 20px auto;
            padding: 20px;
            background-color: #a298da; 
            color: #FFFFFF; 
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            max-width: 800px;
            animation: slideIn 1s ease-out;
        }
    
        iframe, img {
            display: block;
            max-width: 100%;
            margin: 20px auto;
            border-radius: 5px;
        }
    
        img {
            animation: rotate 10s infinite linear;
        }
    
        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
    
        @keyframes slideIn {
            0% {
                transform: translateY(20px);
                opacity: 0;
            }
            100% {
                transform: translateY(0);
                opacity: 1;
            }
        }
    
        @keyframes rotate {
            0% { transform: rotate(0deg); }
            50% { transform: rotate(5deg); }
            100% { transform: rotate(0deg); }
        }
        
        
        li a {
            display: inline-block;
            padding: 7px 13px; 
            font-size: 12px; 
            background-color: #e0e0e0; 
            border-radius: 8px; 
            box-shadow: 0 5px 8px rgba(0, 0, 0, 0.2); 
            transition: transform 0.2s ease, background-color 0.3s ease; 
            color: #555555; 
        }

        li a:hover, li a:focus {
            transform: translateY(-3px); /* Efecto "pop up" al pasar el ratón */
            background-color: #5950d8; 
            color: white; 
        }

