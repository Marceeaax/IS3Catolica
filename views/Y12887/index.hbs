        body {
            font-family: 'Noto Sans', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #FFFFFF; /* Blanco */
            color: #c7a9d0;
        }

        nav {
            background-color: #261d57;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
        }
    
        header, footer {
            background-color: #1d2857; 
            color: #FFFFFF; /* Blanco para el texto */
            padding: 20px 0;
            text-align: center;
            animation: fadeIn 2s ease-out;
        }

        .nav-links {
            display: flex;
            list-style: none;
        }

        .nav-links li {
            margin: 0 10px;
        }

        .nav-links li a {
            background-color: #aa98da;
            color: #FFFFFF;
            text-decoration: none;
            padding: 10px 15px;
